<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when the tab is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" /> <!-- Light blue background for selected tab -->
        </shape>
    </item>
    <!-- Background when the tab is not selected -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background for unselected tab -->
        </shape>
    </item>
</selector>